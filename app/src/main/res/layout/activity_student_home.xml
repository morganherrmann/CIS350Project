<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.moher.cis350project.StudentHome">



    <TextView
        android:id="@+id/text_id"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Welcome!"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHighlight="@android:color/primary_text_dark"

        android:textSize="50dp"/>

    <TextView
        android:id="@+id/mathLevel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:text="Math - Current Level: "
        android:textColor="@android:color/holo_blue_light"
        android:textColorHighlight="@android:color/primary_text_dark"

        android:textSize="20dp"/>

    <Button
        android:id = "@+id/doMath"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/resumeMath"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/readLevel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:text="Reading - Current Level: "
        android:textColor="@android:color/holo_blue_light"
        android:textColorHighlight="@android:color/primary_text_dark"

        android:textSize="20dp"/>

    <Button
        android:id = "@+id/doReading"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/resumeRead"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
